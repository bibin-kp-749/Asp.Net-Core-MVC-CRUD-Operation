@model Employee;
<form method="post" asp-controller="Employee" asp-action="AddEmployee">
    <div class="form-group">
        <label asp-for="EmployeeName">Name</label>
        <input asp-for="EmployeeName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EmployeeAge">Age</label>
        <input asp-for="EmployeeAge" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Department">Department</label>
        <input asp-for="Department" class="form-control" />
    </div>
    <div>
        <button type="submit" class="btn btn-outline-primary">Submit</button>
    </div>
</form>